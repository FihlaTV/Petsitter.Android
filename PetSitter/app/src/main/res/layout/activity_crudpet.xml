<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.example.katsutoshi.petsitter.activity.CRUDPetActivity">

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="26sp"
        android:padding="16dp"/>

    <android.support.design.widget.TextInputLayout
        android:hint="Nome do Animal"
        android:layout_below="@+id/pageTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/wrapperPetName"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtPetNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:hint="Peso"
        android:layout_below="@+id/wrapperPetName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/wrapperPetWeight"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtPetWeightEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:hint="Data de aniversário"
        android:layout_below="@+id/wrapperPetWeight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/wrapperPetBirth"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtPetBirthEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:hint="Raça"
        android:layout_below="@+id/wrapperPetBirth"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/wrapperPetRace"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtPetRaceEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:hint="Sexo"
        android:layout_below="@+id/wrapperPetRace"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/wrapperPetGenre"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtPetGenreEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:hint="Restrições"
        android:layout_below="@+id/wrapperPetGenre"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/wrapperPetRestrictions"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtPetRestrictionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
</ScrollView>
